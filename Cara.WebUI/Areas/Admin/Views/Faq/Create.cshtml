@model Faq
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Fag</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data" id="productForm">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Question</label>
                    <input asp-for="Question" class="form-control" placeholder="Question">
                    <span class="text-danger" asp-validation-for="Question"></span>
                </div>
                <div class="form-group">
                    <label>Answer</label>
                    <input asp-for="Answer" class="form-control" placeholder="Answer">
                    <span class="text-danger" asp-validation-for="Answer"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2" id="submitBtn">Submit</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>

