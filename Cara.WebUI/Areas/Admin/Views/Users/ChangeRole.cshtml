@using Cara.WebUI.Areas.Admin.ViewModels.Users;
@using Microsoft.AspNetCore.Identity;
@model UserVM
@{
    ViewData["Title"] = "ChangeRole";
}

<div class="content-wrapper col-11">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User Role</h4>
                    <p class="card-description">
                        Role Change
                    </p>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="CategoryId">Categories</label>
                            <select class="form-control" asp-for="Role">
                                @foreach (IdentityRole role in ViewBag.Roles)
                                {
                                    <option value="@role.Name">@role.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-check form-check-flat form-check-primary">
                            <button type="submit" class="btn btn-warning mr-2">Change Role</button>
                            <a class="btn btn-light" asp-action="Index">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
