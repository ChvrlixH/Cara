@model List<Product>
@{
	ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Products</h4>
			<a class="btn btn-primary" asp-action="Create">Create Product</a>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Owner</th>
							<th>Rating</th>
							<th>Category Name</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (Product product in Model)
						{
							<tr>
								<td class="py-1">
									<img style="width:60px; height:60px;" src="~/admin/assets/database/products/mainimg/@product.Photo" />
								</td>
								<td style="max-width:300px">@product.Name</td>
								<td style="max-width:300px">@product.Owner</td>
								<td style="max-width:100px">@product.Rating</td>
								<td style="max-width:100px">@product.PCategory.Name</td>
								<td>
									<a class="btn btn-success" asp-action="Detail" asp-route-id="@product.Id">
										<i class="mdi mdi-information-outline" style="color:white"></i>
									</a>
									<a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">
										<i class="mdi mdi-grease-pencil" style="color:white"></i>
									</a>
									<a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">
										<i class="mdi mdi-delete" style="color:white"></i>
									</a>

								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

