@model Blog
@{
    ViewData["Title"] = "Detail";
}

<div class="col-lg-12" style="padding-left:55px">
	<div style="max-width:500px; height:auto; margin-bottom: 25px;">
		<img src="~/admin/assets/database/blogs/@Model.Photo" style="width:100%; height:auto; " />
	</div>
	<h4> <span style="color:red">Title:</span> @Model.Title</h4>
	<h4> <span style="color:red">Author Name:</span> @Model.Author.Fullname</h4>
	<h4> <span style="color:red">Category Name:</span> @Model.BCategory.Name</h4>
	<h4>
		<span style="color:red">Tags:</span>
		<ol style="color:aquamarine; margin:10px; padding:10px; font-size:18px; width:max-content; background-color:darkseagreen">
			@foreach (var blogTag in Model.BlogTags)
			{
				<li style="list-style-position:inside">@blogTag.Tag.Name</li>
			}
		</ol>
	</h4>
	<h4> <span style="color:red">Description:</span> @Html.Raw(Model.Description)</h4>

	<a class="btn btn-info" asp-action="Index" style="margin-top:30px">Go Back</a>
</div>