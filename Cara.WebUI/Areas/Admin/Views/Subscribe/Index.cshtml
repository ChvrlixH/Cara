@model List<Subscribe>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Users Subscribe</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Id</th>
							<th>Email</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (Subscribe subscribe in Model)
						{
							<tr>
								<td style="max-width:300px">@subscribe.Id</td>
								<td style="max-width:300px">@subscribe.Email</td>
								<td>
									<a class="btn btn-danger" asp-action="Delete" asp-route-id="@subscribe.Id">
										<i class="mdi mdi-delete" style="color:white"></i>
									</a>

								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

