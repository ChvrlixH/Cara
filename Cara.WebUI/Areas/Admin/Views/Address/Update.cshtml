@using Cara.WebUI.Areas.Admin.ViewModels.Address;
@model AddressUpdateVM
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Address</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>HeadTitle</label>
                    <input asp-for="HeadTitle" class="form-control" placeholder="HeadTitle">
                    <span class="text-danger" asp-validation-for="HeadTitle"></span>
                </div>
                <div class="form-group">
                    <label>Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label>SubTitle</label>
                    <input asp-for="SubTitle" class="form-control" placeholder="SubTitle">
                    <span class="text-danger" asp-validation-for="SubTitle"></span>
                </div>
                <div class="form-group">
                    <label>Map</label>
                    <input asp-for="Map" class="form-control" placeholder="Map">
                    <span class="text-danger" asp-validation-for="Map"></span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="Phone">
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
                <div class="form-group">
                    <label>Time</label>
                    <input asp-for="Time" class="form-control" placeholder="Time">
                    <span class="text-danger" asp-validation-for="Time"></span>
                </div>
                <div class="form-group">
                    <label>IsActive</label>
                    <input asp-for="IsActive" class="form-control" placeholder="Choose">
                    <span class="text-danger" asp-validation-for="IsActive"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>

