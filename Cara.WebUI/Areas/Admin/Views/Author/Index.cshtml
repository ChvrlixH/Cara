@model IEnumerable<Author>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Authors</h4>
			<a class="btn btn-primary" asp-action="Create">Create Author</a>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Profile</th>
							<th>Fullname</th>
							<th>Profession</th>
							<th>Phone</th>
							<th>Email</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (Author author in Model)
						{
							<tr>
								<td class="py-1">
									<img style="width:60px; height:60px;" src="~/admin/assets/database/authors/@author.Photo" />
								</td>
								<td style="max-width:200px">@author.Fullname</td>
								<td style="max-width:200px">@author.Profession</td>
								<td style="max-width:200px">@author.Phone</td>
								<td style="max-width:300px">@author.Email</td>
								<td>
									<a class="btn btn-success" asp-action="Detail" asp-route-id="@author.Id">
										<i class="mdi mdi-information-outline" style="color:white"></i>
									</a>
									<a class="btn btn-warning" asp-action="Update" asp-route-id="@author.Id">
										<i class="mdi mdi-grease-pencil" style="color:white"></i>
									</a>
									<a class="btn btn-danger" asp-action="Delete" asp-route-id="@author.Id">
										<i class="mdi mdi-delete" style="color:white"></i>
									</a>

								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

