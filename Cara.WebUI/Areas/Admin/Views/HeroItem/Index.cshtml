@model IEnumerable<HeroItem>
@{
	ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Shipping Items</h4>
			<a class="btn btn-primary" asp-action="Create">Create Shipping</a>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Profile</th>
							<th>Name</th>
							<th>Title</th>
							<th>Subtitle</th>
							<th>Description</th>
							<th>Status</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (HeroItem heroItem in Model)
						{
							<tr>
								<td class="py-1">
									<img style="width:60px; height:60px;" src="~/admin/assets/database/@heroItem.Photo" />
								</td>
								<td style="max-width:200px">@heroItem.Name</td>
								<td style="max-width:200px">@heroItem.Title</td>
								<td style="max-width:200px">@heroItem.SubTitle</td>
								<td style="max-width:300px">@Html.Raw(heroItem.Description)</td>
								<td style="max-width:100px">@heroItem.isActive</td>
								<td>
									<a class="btn btn-success" asp-action="Detail" asp-route-id="@heroItem.Id">
											 <i class="mdi mdi-information-outline" style="color:white"></i>
									</a>
									<a class="btn btn-warning" asp-action="Update" asp-route-id="@heroItem.Id">
										<i class="mdi mdi-grease-pencil" style="color:white"></i>
									</a>
									<a class="btn btn-danger" asp-action="Delete" asp-route-id="@heroItem.Id">
										<i class="mdi mdi-delete" style="color:white"></i>
									</a>

								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

