@model IEnumerable<MainBannerItem>
@{
	ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Main Banner Items</h4>
			<a class="btn btn-primary" asp-action="Create">Create Main Banner</a>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Title</th>
							<th>Description</th>
							<th>Button Name</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (MainBannerItem mainBannerItem in Model)
						{
							<tr>
								<td class="py-1">
									<img style="width:60px; height:60px;" src="~/admin/assets/database/homebanners/mainbanners/@mainBannerItem.Photo" />
								</td>
								<td style="max-width:200px">@mainBannerItem.Name</td>
								<td style="max-width:200px">@mainBannerItem.Title</td>
								<td style="max-width:300px">@Html.Raw(mainBannerItem.Description)</td>
								<td style="max-width:100px">@mainBannerItem.BtnName</td>
								<td>
									<a class="btn btn-success" asp-action="Detail" asp-route-id="@mainBannerItem.Id">
										<i class="mdi mdi-information-outline" style="color:white"></i>
									</a>
									<a class="btn btn-warning" asp-action="Update" asp-route-id="@mainBannerItem.Id">
										<i class="mdi mdi-grease-pencil" style="color:white"></i>
									</a>
									<a class="btn btn-danger @(ViewBag.Count==1?"disabled":"") " asp-action="Delete" asp-route-id="@mainBannerItem.Id">
										<i class="mdi mdi-delete" style="color:white"></i>
									</a>

								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

