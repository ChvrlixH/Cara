@model ProductImage
@{
	ViewData["Title"] = "Detail";
}

<div class="col-lg-12" style="padding-left:55px">
	<div style="width:500px; height:auto; margin-bottom: 25px">
		<img src="~/admin/assets/database/products/productimg/@Model.Photo" style="width:100%; height:auto" />
	</div>
	<h4> <span style="color:red">Product Name:</span> @Model.Product.Name</h4>
	<h4> <span style="color:red">Product Id:</span> @Model.Product.Id</h4>
	<a class="btn btn-info" asp-action="Index" style="margin-top:30px">Go Back</a>

</div>

